    <Shell.FlyoutHeader>
        <HorizontalStackLayout
            Padding="10"
            Spacing="10"
            VerticalOptions="Center">

            <!--  Contenedor del avatar o imagen  -->
            <Grid
                HeightRequest="90"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                WidthRequest="90">

                <!--  Imagen si el usuario la tiene  -->
                <ffimageloading:CachedImage
                    Aspect="AspectFill"
                    HeightRequest="70"
                    IsVisible="{Binding HasProfileImage}"
                    Source="{Binding ProfileImage}"
                    WidthRequest="70" />

                <!--  Avatar si no hay imagen  -->
                <toolkit:AvatarView
                    BackgroundColor="LightGray"
                    CornerRadius="45"
                    FontAttributes="Bold"
                    FontSize="36"
                    HeightRequest="70"
                    HorizontalOptions="Center"
                    IsVisible="{Binding HasProfileImage, Converter={StaticResource InverseBoolConverter}}"
                    Text="{Binding Avatar}"
                    TextColor="Black"
                    VerticalOptions="Center"
                    WidthRequest="70" />
            </Grid>

            <!--  Nombre del usuario  -->
            <Label
                FontAttributes="Bold"
                HorizontalOptions="Start"
                Style="{StaticResource globalTitle}"
                Text="{Binding UserName}"
                VerticalOptions="Center" />
        </HorizontalStackLayout>
    </Shell.FlyoutHeader>



