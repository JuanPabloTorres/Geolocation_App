<Shell
    x:Class="GeolocationAds.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GeolocationAds.Pages"
    Shell.BackgroundColor="Red"
    Shell.NavBarHasShadow="True"
    Shell.PresentationMode="Animated"
    Shell.TabBarBackgroundColor="DodgerBlue"
    Shell.TabBarIsVisible="True"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="DarkSlateGrey">




    <TabBar>




        <!--  Home Tab  -->
        <Tab Title="Home">
            <ShellContent Title="Home" ContentTemplate="{DataTemplate local:SearchAd}" />
        </Tab>

        <!--  Create Ads Tab  -->
        <Tab Title="Create">
            <ShellContent Title="Ads" ContentTemplate="{DataTemplate local:CreateAdvertisment}" />
        </Tab>

        <Tab Title="Set Location">



            <ShellContent Title="Ads" ContentTemplate="{DataTemplate local:AdToLocation}" />
        </Tab>
    </TabBar>





</Shell>
