<Shell
    x:Class="GeolocationAds.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:local="clr-namespace:GeolocationAds"
    xmlns:pages="clr-namespace:GeolocationAds.Pages"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Shell.BackgroundColor="{StaticResource DeepBlue}"
    Shell.TabBarIsVisible="False">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:Login}"
        FlyoutItemIsVisible="False"
        Route="login"
        Shell.FlyoutBehavior="Disabled" />

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Route="SearchAd">
        <ShellContent
            Title="Search and Discover"
            ContentTemplate="{DataTemplate pages:SearchAd}"
            Icon="travelexplore.png" />

        <ShellContent
            Title="My Captures"
            ContentTemplate="{DataTemplate pages:MyFavorites}"
            Icon="star.png" />

        <ShellContent
            Title="Content Creation"
            ContentTemplate="{DataTemplate pages:CreateAdvertisment}"
            Icon="plus.png" />
        <ShellContent
            Title="Created by Me"
            ContentTemplate="{DataTemplate pages:MyContentPage}"
            Icon="filebox.png" />

        <ShellContent
            Title="Near You: Explore Now"
            ContentTemplate="{DataTemplate pages:GoogleMapPage}"
            Icon="map.png" />

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:UserSetting}"
            Icon="setting.png" />
    </FlyoutItem>

