    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup x:Name="LoadingState">
            <VisualState x:Name="Loading">
                <VisualState.Setters>
                    <Setter TargetName="carouselView" Property="IsVisible" Value="False" />
                    <Setter TargetName="paginControls" Property="IsVisible" Value="False" />
                    <Setter TargetName="activityIndicator" Property="IsVisible" Value="True" />
                </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Loaded">
                <VisualState.Setters>
                    <Setter TargetName="carouselView" Property="IsVisible" Value="True" />
                    <Setter TargetName="paginControls" Property="IsVisible" Value="True" />
                    <Setter TargetName="activityIndicator" Property="IsVisible" Value="False" />
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
