<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GeolocationAds.Pages.Register"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:drawable="clr-namespace:GeolocationAds.CustomCotrols"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:local="clr-namespace:GeolocationAds.CustomContentView"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:view="clr-namespace:GeolocationAds.ViewTemplates"
    Title="New User"
    BackgroundColor="WhiteSmoke"
    Routing.Route="Register">

    <ContentPage.ToolbarItems>

        <ToolbarItem
            Command="{Binding SubmitCommand}"
            CommandParameter="{Binding Model}"
            IsEnabled="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="MaterialIconsOutlined-Regular" Glyph="&#xe876;" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>

        <ToolbarItem Command="{Binding ClearDataCommand}" IsEnabled="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="MaterialIconsOutlined-Regular" Glyph="&#xe0b8;" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ScrollView HorizontalScrollBarVisibility="Never">
        <VerticalStackLayout Spacing="10" VerticalOptions="Fill">

            <Border
                BackgroundColor="White"
                HeightRequest="150"
                StrokeThickness="0"
                VerticalOptions="Start">
                <Grid>
                    <GraphicsView HorizontalOptions="Fill" VerticalOptions="Fill">
                        <GraphicsView.Drawable>
                            <drawable:SemiCircle />
                        </GraphicsView.Drawable>
                    </GraphicsView>
                    <Label
                        FontAttributes="Bold"
                        FontSize="24"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Welcome Sign up to Continue"
                        TextColor="White"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                </Grid>
            </Border>

            <CollectionView Grid.Row="0" ItemsSource="{Binding ValidationResults}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout HorizontalOptions="Center">
                            <Label Style="{StaticResource ErrorLabelStyle}" Text="{Binding ErrorMessage}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>
            </CollectionView>

            <!--<VerticalStackLayout
                Margin="0,10,0,0"
                HorizontalOptions="Center"
                Spacing="5">
            -->
            <!--  Imagen si el usuario seleccionó una  -->
            <!--


                <ffimageloading:CachedImage
                    Aspect="Fill"
                    FadeAnimationEnabled="True"
                    IsVisible="{Binding HasProfileImage}"
                    Source="{Binding ProfileImage}" />

            -->
            <!--  Avatar con inicial del nombre si no hay imagen  -->
            <!--
                <toolkit:AvatarView
                    BackgroundColor="LightGray"
                    CornerRadius="50"
                    FontAttributes="Bold"
                    FontSize="36"
                    HeightRequest="100"
                    HorizontalOptions="Center"
                    IsVisible="{Binding HasProfileImage, Converter={StaticResource InverseBoolConverter}}"
                    Text="{Binding Avatar}"
                    TextColor="Black"
                    WidthRequest="100" />

            -->
            <!--  Botón para seleccionar imagen  -->
            <!--
                <Button
                    Command="{Binding SelectProfileImageCommand}"
                    HorizontalOptions="Center"
                    Text="Seleccionar imagen" />
            </VerticalStackLayout>-->

            <view:ProfileImageView
                Avatar="{Binding Avatar}"
                HasProfileImage="{Binding HasProfileImage}"
                ProfileImage="{Binding ProfileImage}"
                SelectProfileImageCommand="{Binding SelectProfileImageCommand}" />



            <!--  Section Title for Personal Information  -->
            <Label Style="{StaticResource globalLabel}" Text="Personal Information" />

            <BoxView HeightRequest="0.1" />

            <!--  FullName Input  -->
            <local:CustomEntryContentView
                Grid.Row="2"
                IconSource="&#xe7fd;"
                IsEnabled="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                Placeholder="FullName"
                Text="{Binding Model.FullName, Mode=TwoWay}" />

            <!--  Phone Input  -->
            <local:CustomEntryContentView
                Grid.Row="4"
                IconSource="&#xe0b0;"
                IsEnabled="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                Placeholder="(XXX)-XXX-XXXX"
                Text="{Binding Model.Phone, Mode=TwoWay}"
                TextChanged="onPhoneChange" />

            <!--  Email Input  -->
            <local:CustomEntryContentView
                Grid.Row="6"
                IconSource="&#xe158;"
                IsEnabled="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                Placeholder="Email"
                Text="{Binding Model.Email, Mode=TwoWay}"
                TextChanged="onEmailChange" />

            <!--  Section Title for Account Information  -->
            <Label Style="{StaticResource globalLabel}" Text="Account Information" />
            <BoxView HeightRequest="0.1" />

            <!--  Username Input  -->
            <local:CustomEntryContentView
                Grid.Row="8"
                IconSource="&#xe7fd;"
                IsEnabled="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                Placeholder="Username"
                Text="{Binding Model.Login.Username, Mode=TwoWay}" />

            <!--  Password Input  -->
            <local:CustomEntryContentView
                Grid.Row="10"
                IconSource="&#xe897;"
                IsEnabled="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                IsPassword="True"
                Placeholder="Password"
                Text="{Binding Model.Login.Password, Mode=TwoWay}" />

            <ContentView
                x:Name="LoadingIndicatorContainer"
                Grid.Row="8"
                IsVisible="{Binding IsLoading}"
                VerticalOptions="FillAndExpand">
                <ContentView.Content>
                    <ActivityIndicator IsRunning="{Binding IsLoading}" Style="{StaticResource globalLoading}" />
                </ContentView.Content>
            </ContentView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>