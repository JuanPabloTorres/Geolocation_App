        <CarouselView
            x:Name="carouselView"
            Grid.Row="0"
            Margin="0"
            IsScrollAnimated="True"
            IsSwipeEnabled="False"
            ItemsSource="{Binding CollectionModel}">

            <CarouselView.EmptyView>
                <VerticalStackLayout>
                    <Label Style="{StaticResource emptyCollectionLabel}" Text="Search For Content" />
                </VerticalStackLayout>
            </CarouselView.EmptyView>

            <CarouselView.ItemTemplate>
                <DataTemplate>

                    <Frame
                        Margin="0"
                        CornerRadius="0"
                        Style="{StaticResource cardFrame}">

                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <!--<RowDefinition Height="Auto" />-->
                            </Grid.RowDefinitions>

                            <StackLayout
                                Grid.Row="0"
                                BackgroundColor="#ff9800"
                                Orientation="Horizontal">

                                <Label
                                    HorizontalOptions="CenterAndExpand"
                                    Style="{StaticResource globalLabel}"
                                    Text="{Binding CurrentAdvertisement.Title}"
                                    TextColor="White" />

                                <Button
                                    Command="{Binding OpenActionPopUpCommand}"
                                    CommandParameter="{Binding CurrentAdvertisement}"
                                    CornerRadius="0"
                                    IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                                    Style="{StaticResource XButton}">

                                    <Button.ImageSource>
                                        <FontImageSource FontFamily="MaterialIconsOutlined-Regular" Glyph="&#xe5d3;" />
                                    </Button.ImageSource>
                                </Button>

                                <Button
                                    Command="{Binding RemoveCommand}"
                                    CommandParameter="{Binding CurrentAdvertisement}"
                                    CornerRadius="0"
                                    IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                                    Style="{StaticResource XButton}">

                                    <Button.ImageSource>
                                        <FontImageSource FontFamily="MaterialIconsOutlined-Regular" Glyph="&#xe5cd;" />
                                    </Button.ImageSource>
                                </Button>
                            </StackLayout>

                            <CarouselView
                                Grid.Row="1"
                                IsBounceEnabled="False"
                                IsScrollAnimated="False"
                                ItemTemplate="{StaticResource typeSelector}"
                                ItemsSource="{Binding ContentTypesTemplate}"
                                ItemsUpdatingScrollMode="KeepScrollOffset"
                                Loop="False">

                                <CarouselView.ItemsLayout>
                                    <LinearItemsLayout
                                        Orientation="Horizontal"
                                        SnapPointsAlignment="Start"
                                        SnapPointsType="MandatorySingle" />
                                </CarouselView.ItemsLayout>

                                <CarouselView.EmptyView>
                                    <StackLayout>
                                        <Label Style="{StaticResource emptyCollectionLabel}" Text="Content goes here." />
                                    </StackLayout>
                                </CarouselView.EmptyView>
                            </CarouselView>

