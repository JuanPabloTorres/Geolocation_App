<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GeolocationAds.Pages.AdToLocation"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ToolsLibrary.Converters;assembly=ToolsLibrary"
    Title="My Content"
    Routing.Route="AdToLocation">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button
            Grid.Row="0"
            Command="{Binding SearchCommand}"
            IsEnabled="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
            Style="{StaticResource globalButton}"
            Text="Refresh">

            <Button.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity="0.5"
                    Radius="40"
                    Offset="5,5" />
            </Button.Shadow>
        </Button>

        <ActivityIndicator
            Grid.Row="1"
            IsRunning="{Binding IsLoading}"
            IsVisible="{Binding IsLoading}"
            Style="{StaticResource globalLoading}"
            VerticalOptions="CenterAndExpand" />


        <CarouselView
            Grid.Row="2"
            Margin="10"
            ItemsSource="{Binding CollectionModel}">

            <CarouselView.EmptyView>
                <StackLayout>
                    <Label Style="{StaticResource emptyCollectionLabel}" Text="Search For Content" />
                </StackLayout>
            </CarouselView.EmptyView>

            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>

                        <Frame Style="{StaticResource cardFrame}">
                            <StackLayout>

                                <StackLayout Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource globalLabel}"
                                        Text="{Binding CurrentAdvertisement.Title}" />

                                    <Button
                                        Command="{Binding RemoveCommand}"
                                        CommandParameter="{Binding CurrentAdvertisement}"
                                        IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                                        Style="{StaticResource XButton}"
                                        Text="X" />
                                </StackLayout>

                                <Frame Style="{StaticResource imageFrame}">

                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="300"
                                        IsAnimationPlaying="True"
                                        Source="{Binding CurrentAdvertisement.Content, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                        WidthRequest="400" />
                                </Frame>

                                <BoxView
                                    Margin="4,10,4,10"
                                    BackgroundColor="#e5e4e2"
                                    HeightRequest="1" />

                                <Label
                                    HorizontalOptions="End"
                                    Style="{StaticResource globalsubTitle}"
                                    Text="{Binding CurrentAdvertisement.ExpirationDate, StringFormat='Exp:{0:dd/MM/yyyy}'}" />

                                <StackLayout Margin="5" Orientation="Horizontal">
                                    <Button
                                        Command="{Binding SetLocationCommand}"
                                        CommandParameter="{Binding CurrentAdvertisement}"
                                        IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                                        Style="{StaticResource cardButton}"
                                        Text="Set Location" />

                                    <Button
                                        BackgroundColor="Green"
                                        Command="{Binding onNavigate}"
                                        CommandParameter="{Binding CurrentAdvertisement.ID}"
                                        IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                                        Style="{StaticResource cardButton}"
                                        Text="Detail" />
                                </StackLayout>

                                <ActivityIndicator
                                    IsRunning="{Binding IsLoading}"
                                    IsVisible="{Binding IsLoading}"
                                    Style="{StaticResource globalLoading}" />
                            </StackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>

            <CarouselView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" />
            </CarouselView.ItemsLayout>
        </CarouselView>

    </Grid>
</ContentPage>