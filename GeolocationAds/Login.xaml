<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GeolocationAds.Login"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customControl="clr-namespace:GeolocationAds.CustomCotrols"
    xmlns:drawable="clr-namespace:GeolocationAds.CustomCotrols"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:lo="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    xmlns:local="clr-namespace:GeolocationAds.CustomContentView"
    xmlns:views="clr-namespace:GeolocationAds.ViewTemplates"
    Title="Login"
    BackgroundImageSource="loginbackground.png"
    Routing.Route="Login"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">

    <VerticalStackLayout VerticalOptions="Center">

        <Label
            Margin="5"
            FontAttributes="Bold"
            FontFamily="Roboto"
            FontSize="40"
            Style="{StaticResource globalTitle}"
            Text="Geo-Connect "
            TextColor="{StaticResource White}" />

        <Border
            Grid.Row="1"
            Style="{StaticResource CustomBorderStyle}"
            VerticalOptions="Center">

            <VerticalStackLayout BackgroundColor="GhostWhite" HorizontalOptions="Fill">

                <Label
                    FontAttributes="Italic"
                    FontSize="35"
                    HorizontalOptions="Center"
                    Style="{StaticResource globalTitle}"
                    Text="Welcome Back "
                    TextColor="#3e4144" />

                <Label
                    FontAttributes="Italic"
                    FontFamily="Roboto"
                    Style="{StaticResource globalsubTitle}"
                    Text="Search And Discover "
                    TextColor="#3e4144" />

                <local:CustomEntryContentView
                    IconSource="&#xe8e8;"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                    IsPassword="False"
                    Placeholder="Enter your username..."
                    Text="{Binding Model.Username}" />

                <local:CustomEntryContentView
                    Title="Password"
                    IconSource="&#xf042;"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                    IsPassword="True"
                    Placeholder="Enter your password..."
                    Text="{Binding Model.Password}" />

                <HorizontalStackLayout HorizontalOptions="Center" IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}">

                    <HorizontalStackLayout>
                        <!--  Checkbox for 'Remember Password'  -->
                        <CheckBox
                            IsChecked="{Binding IsRemember}"
                            VerticalOptions="Center"
                            Color="{StaticResource AppBlack}" />

                        <Label
                            FontAttributes="Bold"
                            Style="{StaticResource globalsubTitle}"
                            Text="Remember"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Button
                        BackgroundColor="Transparent"
                        Command="{Binding OpenRecoveryPopUpCommand}"
                        Style="{StaticResource globalButton}"
                        Text="Forgot Password?"
                        TextColor="{StaticResource appPrimaryOpt2ColorPrimaryDark}" />
                </HorizontalStackLayout>

                <Button
                    Margin="20,0,20,0"
                    Command="{Binding VerifyCredentialCommand}"
                    CommandParameter="{Binding Model}"
                    IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                    Style="{StaticResource globalButton}"
                    Text="Sign In">

                    <Button.ImageSource>
                        <FontImageSource FontFamily="MaterialIconsOutlined-Regular" Glyph="&#xea77;" />
                    </Button.ImageSource>
                </Button>

                <VerticalStackLayout
                    Padding="10"
                    IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                    Spacing="5"
                    VerticalOptions="Center">

                    <BoxView HeightRequest="0.1" />

                    <!--<Label HorizontalOptions="Center" Text="Or sign in with" />-->

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="12">
                        <Button
                            BackgroundColor="Transparent"
                            Command="{Binding SignInWithGoogleCommand}"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            ImageSource="google.png"
                            Text="Google"
                            TextColor="Black" />
                        <!--  Ensure you have a Google logo in your Resources  -->

                        <Button
                            BackgroundColor="Transparent"
                            Command="{Binding SignInWithFacebookCommand}"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            ImageSource="facebook.png"
                            Text="Facebook"
                            TextColor="Black" />
                        <!--  Ensure you have a Facebook logo in your Resources  -->
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <ActivityIndicator
                    IsRunning="{Binding IsLoading}"
                    IsVisible="{Binding IsLoading}"
                    Style="{StaticResource globalLoading}" />


            </VerticalStackLayout>
        </Border>

        <HorizontalStackLayout
            Padding="10"
            BackgroundColor="Transparent"
            HorizontalOptions="Center"
            IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
            VerticalOptions="Center">

            <Label
                Text="Don't have an account?"
                TextColor="{StaticResource White}"
                TextDecorations="Underline"
                VerticalOptions="Center" />
            <Button
                Padding="0"
                BackgroundColor="Transparent"
                Command="{Binding GoToRegisterCommand}"
                Style="{StaticResource globalButton}"
                Text="Sign Up"
                TextColor="{StaticResource White}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>