<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GeolocationAds.Login"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GeolocationAds.CustomContentView"
    Title="Login"
    BackgroundImageSource="loginbackgroundyellow2.jpg"
    Routing.Route="Login"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">

    <Grid VerticalOptions="CenterAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header Section  -->

        <!--  Form Section  -->
        <Frame Style="{StaticResource cardLogoFrame}">
            <StackLayout Grid.Row="1" Margin="10">

                <StackLayout>

                    <Label
                        Margin="5"
                        FontSize="30"
                        Style="{StaticResource globalLabel}"
                        Text="Welcome" />

                    <local:CustomEntryContentView
                        IsPassword="False"
                        Placeholder="Username"
                        Text="{Binding Model.Username}" />

                    <local:CustomEntryContentView
                        IsPassword="True"
                        Placeholder="Password"
                        Text="{Binding Model.Password}" />

                    <Button
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding Model}"
                        IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                        Style="{StaticResource globalButton}"
                        Text="Sign In" />

                    <Button
                        BackgroundColor="LightSalmon"
                        Command="{Binding RegisterCommand}"
                        IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
                        Style="{StaticResource globalButton}"
                        Text="Do you want to sign up?" />

                    <ActivityIndicator
                        IsRunning="{Binding IsLoading}"
                        IsVisible="{Binding IsLoading}"
                        Style="{StaticResource globalLoading}" />
                </StackLayout>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>