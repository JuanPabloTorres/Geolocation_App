<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GeolocationAds.ViewTemplates.StatusBarOverlay"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="root"
    BackgroundColor="{StaticResource AppGray}"
    IsVisible="{Binding IsVisible, Source={x:Reference root}}"
    VerticalOptions="End"
    ZIndex="998">

    <HorizontalStackLayout VerticalOptions="End">

        <Label
            IsVisible="{Binding ShowCount, Source={x:Reference root}}"
            Style="{StaticResource globalsubTitle}"
            Text="{Binding FormattedCount, Source={x:Reference root}}"
            TextColor="White" />

        <Label
            IsVisible="{Binding ShowAdType, Source={x:Reference root}}"
            Style="{StaticResource globalsubTitle}"
            Text="{Binding AdType, Source={x:Reference root}}"
            TextColor="White" />

        <Label
            IsVisible="{Binding ShowDistance, Source={x:Reference root}}"
            Style="{StaticResource globalsubTitle}"
            Text="{Binding FormattedDistance, Source={x:Reference root}}"
            TextColor="White" />
    </HorizontalStackLayout>
</ContentView>