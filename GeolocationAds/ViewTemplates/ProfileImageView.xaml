<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GeolocationAds.ViewTemplates.ProfileImageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="root">
    <VerticalStackLayout
        Margin="0,10,0,0"
        HorizontalOptions="Center"
        Spacing="5">

        <!--  Imagen si el usuario la tiene  -->
        <ffimageloading:CachedImage
            Aspect="Fill"
            FadeAnimationEnabled="True"
            HeightRequest="100"
            IsVisible="{Binding HasProfileImage, Source={x:Reference root}}"
            Source="{Binding ProfileImage, Source={x:Reference root}}"
            WidthRequest="100" />

        <!--  Avatar si no hay imagen  -->
        <toolkit:AvatarView
            BackgroundColor="LightGray"
            CornerRadius="50"
            FontAttributes="Bold"
            FontSize="36"
            HeightRequest="100"
            HorizontalOptions="Center"
            IsVisible="{Binding HasProfileImage, Converter={StaticResource InverseBoolConverter}, Source={x:Reference root}}"
            Text="{Binding Avatar, Source={x:Reference root}}"
            TextColor="Black"
            VerticalOptions="Center"
            WidthRequest="100" />

        <!--  BotÃ³n para seleccionar imagen  -->
        <Button
            Command="{Binding SelectProfileImageCommand, Source={x:Reference root}}"
            Style="{StaticResource globalButton}"
            Text="Profile Image">

            <Button.ImageSource>
                <FontImageSource FontFamily="MaterialIconsOutlined-Regular" Glyph="&#xe853;" />
            </Button.ImageSource>

        </Button>
    </VerticalStackLayout>
</ContentView>
