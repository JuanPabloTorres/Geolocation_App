<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="GeolocationAds.ViewTemplates.VideoDisplayer"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converter="clr-namespace:GeolocationAds.App_Converter"
    xmlns:headerView="clr-namespace:GeolocationAds.ViewTemplates"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:GeolocationAds.ViewTemplates"
    RowDefinitions="Auto,Auto,*,Auto">

    <!--  🎬 Header según el tipo de pantalla  -->
    <Grid
        x:Name="myContentStackHeader"
        Grid.Row="0"
        ColumnDefinitions="*,*"
        RowDefinitions="Auto">

        <BoxView
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="{StaticResource AppBlack}"
            Opacity="{StaticResource OpacityValue}" />

        <headerView:ContentHeaderView
            Grid.Row="0"
            Grid.Column="1"
            BackgroundColor="{StaticResource AppBlack}" />
    </Grid>

    <Grid
        x:Name="searchContentStackHeader"
        Grid.Row="0"
        ColumnDefinitions="*,*"
        RowDefinitions="Auto">

        <BoxView
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="{StaticResource AppBlack}"
            Opacity="{StaticResource OpacityValue}" />

        <headerView:HomeContentItemHeaderView
            Grid.Row="0"
            Grid.Column="1"
            BackgroundColor="{StaticResource AppBlack}" />
    </Grid>

    <Grid
        x:Name="myCaptureHeader"
        Grid.Row="0"
        ColumnDefinitions="*,*"
        RowDefinitions="Auto">

        <BoxView
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="{StaticResource AppBlack}"
            Opacity="{StaticResource OpacityValue}" />

        <headerView:CaptureHeaderDisplayer
            Grid.Row="0"
            Grid.Column="1"
            BackgroundColor="{StaticResource AppBlack}" />
    </Grid>

    <headerView:ContentInformationDisplayer Grid.Row="1" />

    <!--  ▶️ Reproductor de video  -->
    <toolkit:MediaElement
        x:Name="videoPlayer"
        Grid.Row="2"
        Aspect="AspectFill"
        MediaFailed="videoPlayer_MediaFailed"
        ShouldAutoPlay="False"
        ShouldKeepScreenOn="True"
        ShouldLoopPlayback="False"
        ShouldShowPlaybackControls="False"
        Source="{Binding MediaSource}" />

    <!--  ⏯️ Controles de video  -->
    <Border
        Grid.Row="3"
        Margin="2"
        Padding="2"
        BackgroundColor="{StaticResource AppBlack}"
        StrokeShape="RoundRectangle 5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Controles  -->
            <Button
                Grid.Column="0"
                Command="{Binding BackMediaCommand}"
                CommandParameter="{x:Reference videoPlayer}"
                Style="{StaticResource XButton}">
                <Button.ImageSource>
                    <FontImageSource FontFamily="MaterialIconsOutlined-Regular" Glyph="&#xe059;" />
                </Button.ImageSource>
            </Button>
            <Button
                Grid.Column="1"
                Command="{Binding PlayPauseCommand}"
                CommandParameter="{x:Reference videoPlayer}"
                Style="{StaticResource XButton}">
                <Button.ImageSource>
                    <FontImageSource FontFamily="MaterialIconsOutlined-Regular" Glyph="&#xe1c4;" />
                </Button.ImageSource>
            </Button>
            <Button
                Grid.Column="2"
                Command="{Binding ReloadMediaCommand}"
                CommandParameter="{x:Reference videoPlayer}"
                Style="{StaticResource XButton}">
                <Button.ImageSource>
                    <FontImageSource FontFamily="MaterialIconsOutlined-Regular" Glyph="&#xe9d6;" />
                </Button.ImageSource>
            </Button>
            <Button
                Grid.Column="3"
                Command="{Binding ForwardMediaCommand}"
                CommandParameter="{x:Reference videoPlayer}"
                Style="{StaticResource XButton}">
                <Button.ImageSource>
                    <FontImageSource FontFamily="MaterialIconsOutlined-Regular" Glyph="&#xe056;" />
                </Button.ImageSource>
            </Button>

            <!--  Progreso  -->
            <HorizontalStackLayout Grid.Column="4">
                <VerticalStackLayout>

                    <Slider Maximum="{Binding Source={x:Reference videoPlayer}, Path=Duration.TotalSeconds}" Value="{Binding Source={x:Reference videoPlayer}, Path=Position.TotalSeconds, Mode=TwoWay}" />

                    <HorizontalStackLayout>
                        <Label
                            FontSize="15"
                            Text="{Binding Source={x:Reference videoPlayer}, Path=Position, StringFormat='{0:mm\\:ss}'}"
                            TextColor="White" />
                        <Label
                            FontSize="12"
                            Text=" / "
                            TextColor="White" />
                        <Label
                            FontSize="15"
                            Text="{Binding Source={x:Reference videoPlayer}, Path=Duration, StringFormat='{0:mm\\:ss}'}"
                            TextColor="White" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Grid>
    </Border>

    <views:LoadingOverlay Grid.Row="0" IsVisible="{Binding IsLoading}" />
</Grid>