<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GeolocationAds.ViewTemplates.LoadingOverlay"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="root"
    BackgroundColor="Transparent"
    IsVisible="{Binding IsVisible, Source={x:Reference root}}"
    ZIndex="999">

    <Grid BackgroundColor="#80000000" IsVisible="{Binding IsVisible, Source={x:Reference root}}">
        <ActivityIndicator
            HorizontalOptions="Center"
            IsRunning="{Binding IsVisible, Source={x:Reference root}}"
            Style="{StaticResource globalLoading}"
            VerticalOptions="Center" />
    </Grid>
</ContentView>
