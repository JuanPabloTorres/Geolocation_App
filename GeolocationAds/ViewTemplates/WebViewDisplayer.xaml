                </Button.ImageSource>
            </Button>

            <Button
                Grid.Row="1"
                Grid.Column="2"
                Command="{Binding ReloadCommand}"
                CommandParameter="{x:Reference web}"
                CornerRadius="0"
                IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}">
                <Button.Shadow>
                    <Shadow
