<?xml version="1.0" encoding="utf-8" ?>
<VerticalStackLayout
    x:Class="GeolocationAds.ViewTemplates.ContentInformationDisplayer"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Margin="2"
    Padding="5"
    BackgroundColor="Transparent">

    <Label
        Style="{StaticResource globalTitle}"
        Text="{Binding Advertisement.Title}"
        TextColor="White" />

    <VerticalStackLayout>
        <Label
            LineBreakMode="WordWrap"
            Style="{StaticResource globalDescriptionLabel}"
            Text="{Binding DisplayDescription}"
            TextColor="White" />

        <Label
            FontAttributes="Bold"
            HorizontalOptions="End"
            IsVisible="{Binding IsLoading, Converter={StaticResource IsEnableConverter}}"
            Text="{Binding IsExpanded, Converter={StaticResource BoolToTextConverter}, ConverterParameter='More ,Less '}"
            TextColor="{StaticResource Blue100Accent}">

            <!--  ðŸŽ¯ Sombra  -->
            <Label.Shadow>
                <Shadow
                    Brush="{StaticResource AppBlack}"
                    Opacity="0.5"
                    Radius="2"
                    Offset="1,1" />
            </Label.Shadow>

            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ToggleExpandCommand}" />
            </Label.GestureRecognizers>
        </Label>
    </VerticalStackLayout>
</VerticalStackLayout>