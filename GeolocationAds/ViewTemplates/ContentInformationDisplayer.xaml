<?xml version="1.0" encoding="utf-8" ?>
<Border
    x:Class="GeolocationAds.ViewTemplates.ContentInformationDisplayer"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Style="{StaticResource borderOnHeaderControls}">
    <VerticalStackLayout
        Padding="5"
        BackgroundColor="{StaticResource AppBlack}"
        HorizontalOptions="StartAndExpand"
        VerticalOptions="End">



        <Label
            Style="{StaticResource globalLabel}"
            Text="{Binding Advertisement.Title}"
            TextColor="White"
            VerticalOptions="Start" />

        <Label
            LineBreakMode="WordWrap"
            LineHeight="1.8"
            MaxLines="3"
            Style="{StaticResource globalDescriptionLabel}"
            Text="{Binding Advertisement.Description}"
            TextColor="White" />
    </VerticalStackLayout>
</Border>
