<?xml version="1.0" encoding="utf-8" ?>
<Border
    x:Class="GeolocationAds.ViewTemplates.ContentInformationDisplayer"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Style="{StaticResource borderOnHeaderControls}">
    <VerticalStackLayout
        Padding="5"
        BackgroundColor="{StaticResource AppBlack}"
        HorizontalOptions="StartAndExpand"
        VerticalOptions="End">

        <Label
            HorizontalOptions="StartAndExpand"
            Style="{StaticResource globalLabel}"
            Text="{Binding Advertisement.Title}"
            TextColor="White"
            VerticalOptions="Start" />

        <Label
            HorizontalOptions="StartAndExpand"
            Style="{StaticResource globalLabel}"
            Text="{Binding Advertisement.Description}"
            TextColor="White"
            VerticalOptions="Start" />
    </VerticalStackLayout>
</Border>
